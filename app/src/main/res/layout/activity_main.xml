<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="label number of color group"
        android:ems="10" />


<!--    <RelativeLayout
        android:id="@+id/color"

        android:layout_width="match_parent"
        android:layout_height="30dp"></RelativeLayout>-->


    <EditText
        android:id="@+id/editTextRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="R"
        />

    <EditText
        android:id="@+id/editTextY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="G"
        />
    <EditText
        android:id="@+id/editTextB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="B"
        />



    <RelativeLayout
        android:id="@+id/color3"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/color4"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/color5"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/color6"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/color7"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/color8"
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>
    <Button
        android:id="@+id/btn_colorShow"
        android:layout_gravity="center_horizontal"
        android:text="Color palette"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn11"
            android:text="Color 2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn22"
            android:text="Color 2"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn33"
            android:text="Color 3"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn44"
            android:text="Color 4"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn55"
            android:text="Color 5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn66"
            android:text="Color 6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save" />
    <Button
        android:id="@+id/btn_find"
        android:text="Search color group"
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_colorUI"
        android:layout_gravity="center_horizontal"
        android:text="Random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>